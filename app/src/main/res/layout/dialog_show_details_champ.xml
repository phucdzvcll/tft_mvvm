<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Dialog_background_cardview"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_champ_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/text_name_champ_coloer"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@color/backgroung_toolbar"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/champ_cover_dialog"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/cove_img"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/skill_avatar_dialog"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="8sp"
            android:background="#000" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/skill_name_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/text_name_dialog_color"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activated_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:textColor="@color/text_acticated_color_dialog"
        android:textSize="17sp" />
</LinearLayout>