<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayoutByRank"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.tft_mvvm.app.features.main.fragment.ShowChampByGoldFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:tag="blank"
                android:background="#000"
                android:id="@+id/champ1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/champ3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/champ3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:tag="blank"
                android:background="#000"
                android:id="@+id/champ2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/champ3"
                app:layout_constraintEnd_toStartOf="@+id/champ3"
                app:layout_constraintStart_toEndOf="@+id/champ1"
                app:layout_constraintTop_toTopOf="@+id/champ3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:tag="blank"
                android:background="#000"
                android:id="@+id/champ3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/champ8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:tag="blank"
                android:background="#000"
                android:id="@+id/champ4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/champ3"
                app:layout_constraintEnd_toStartOf="@+id/champ5"
                app:layout_constraintStart_toEndOf="@+id/champ3"
                app:layout_constraintTop_toTopOf="@+id/champ3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:tag="blank"
                android:background="#000"
                android:id="@+id/champ5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/champ4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/champ4" />


            <androidx.appcompat.widget.AppCompatImageView
                android:tag="blank"
                android:background="#000"
                android:id="@+id/champ6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/champ8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/champ8" />

            <androidx.appcompat.widget.AppCompatImageView
                android:tag="blank"
                android:background="#000"
                android:id="@+id/champ7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/champ8"
                app:layout_constraintEnd_toStartOf="@+id/champ8"
                app:layout_constraintStart_toEndOf="@+id/champ6"
                app:layout_constraintTop_toTopOf="@+id/champ8" />

            <androidx.appcompat.widget.AppCompatImageView
                android:tag="blank"
                android:background="#000"
                android:id="@+id/champ8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:tag="blank"
                android:background="#000"
                android:id="@+id/champ9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/champ8"
                app:layout_constraintEnd_toStartOf="@+id/champ10"
                app:layout_constraintStart_toEndOf="@+id/champ8"
                app:layout_constraintTop_toTopOf="@+id/champ8" />

            <androidx.appcompat.widget.AppCompatImageView
                android:tag="blank"
                android:background="#000"
                android:id="@+id/champ10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/champ8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/champ8" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/countChamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:textColor="#fff"
        android:textSize="30sp"
        tools:text="xxxx" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_by_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        app:layout_constraintTop_toBottomOf="@+id/countChamp"
        tools:layout_editor_absoluteX="4dp" />


</androidx.constraintlayout.widget.ConstraintLayout>